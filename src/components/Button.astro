---
interface Props {
    text: string;
	bgColor: string;
    color: string;
    href: string;
    fullwidth?: boolean;
}

const { bgColor, color, text, href, fullwidth } = Astro.props;

---

<a class:list={[{fullwidth: fullwidth}]} href={ href }>{ text }</a>

<style define:vars={{color, bgColor}}>
    a {
        display: grid;
        place-items: center;
        color: var(--color);
        background: var(--bgColor);
        border: 1px solid var(--color);
        width: 245px;
        height: 65px;
        letter-spacing: 2.5px;
        font-family: 'League Spartan', sans-serif;
        font-weight: 700;
        font-size: 17px;
        text-transform: uppercase;
        text-decoration: none;
        cursor: pointer;
        overflow: hidden;
        position: relative;
        transition: all 0.2s ease-in;
    }

    .fullwidth {
        width: 100%;
    }

    a:hover {
        color: var(--black-bg);
        background: var(--color);
        border: 1px solid var(--black-bg);
    }

    a::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: var(--color);
        transform: translateX(-100%);
        transition: all .3s;
        z-index: -1;
    }

    a:hover::before {
        transform: translateX(0);
    }

    @media screen and (width <= 600px) {
        
        a {
            font-size: 16px;
        }
    }

</style>