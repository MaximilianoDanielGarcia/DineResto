---
import Banner from "../components/Banner.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Dine Resto.">
    <main>
        <Banner title="Reservations" description="We can’t wait to host you. If you have any special requirements please feel free to call on the phone number below. We’ll be happy to accommodate you."/>
        
        <section>
            <img src="/images/patterns/pattern-lines.svg" alt="">
        </section>
    </main> 
</Layout>

<style>

    main {
        width: 100%;
        height: 100%;
        min-width: 1440px;
    }

    section {
        display: flex;
        justify-content: end;
        align-items: center;
        background-image: url('/images/patterns/pattern-curve-bottom-right.svg');
        background-repeat: no-repeat;
        background-position: left top;
        gap: 150px;
        width: 100%;
        height: 300px;
    }

    @media screen and (width <= 900px) {
        main {
            min-width: 900px;
        }

        section {
            height: 500px;
            background-image: none;
        }
    }

    @media screen and (width <= 600px) {
        main {
            min-width: 100%;
        }
    }
</style>